<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"

            android:src="@drawable/bpkuti" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="05dp"
            android:layout_toEndOf="@+id/img">

            <itg8.com.wmcapp.widget.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:maxLines="3"
                android:text="SIT Probe Into Farmer's Death should cover All Factors:CCFI"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold"
                app:font_value="ROBOTO_REGULAR" />

            <itg8.com.wmcapp.widget.CustomFontTextView
                android:id="@+id/lbl_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:lines="1"
                android:maxLines="1"
                android:text="2 Ago"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                app:font_value="ROBOTO_LIGHT" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_rectangle"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/colorGoogle" />


        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>