<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="itg8.com.wmcapp.suggestion.SuggestionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="08dp"
        app:cardPreventCornerOverlap="true"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <FrameLayout
        android:id="@+id/frmPreview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgAdd"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/imgadd"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imgMoreMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />
    </FrameLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_title"
        android:textColor="@color/colorBlack"
        android:text="Title"
        android:padding="10dp"
        android:layout_margin="05dp"
        android:gravity="left"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:background="@drawable/bg_box"
        android:hint="Title"
        android:textSize="14sp"/>

    <EditText
        android:layout_margin="05dp"
        android:id="@+id/txt_rating_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:padding="10dp"
        android:maxLines="5"
        android:hint="Write your suggestion"
        android:textSize="14sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textMultiLine"
        android:lines ="5"
        android:background="@drawable/bg_box"/>

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/progressView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cpv_color="@color/colorPrimary"
        android:visibility="gone"
        android:layout_margin="10dp"
        app:cpv_thickness="2dp"
        android:layout_gravity="center"
        app:cpv_indeterminate="true"
        app:cpv_animAutostart="true"/>




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_rating_submit"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Submit"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"/>
</LinearLayout>
    </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>
